# キャッシュ制御設定

# index.htmlは常に最新版を取得（キャッシュしない）
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JSファイル（ハッシュ付き）は長期間キャッシュOK
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSSファイル（ハッシュ付き）も長期間キャッシュOK
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# 画像・フォントも長期間キャッシュOK
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable
/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# その他の静的ファイルは短期間キャッシュ
/*
  Cache-Control: public, max-age=3600
